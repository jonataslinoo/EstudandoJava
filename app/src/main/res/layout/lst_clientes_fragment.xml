<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:elevation="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/tv_nome_cliente_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corPreto"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Jonatas Lino"/>

        <TextView
            android:id="@+id/tv_telefone_cliente_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/corPreto"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            tools:text="011 97701-4663"
            app:layout_constraintEnd_toEndOf="@id/tv_nome_cliente_fragment"
            app:layout_constraintStart_toStartOf="@id/tv_nome_cliente_fragment"
            app:layout_constraintTop_toBottomOf="@id/tv_nome_cliente_fragment" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>