<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_cadastrar_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/et_nome_cadastrar_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/nome_usuario"
        android:importantForAutofill="no"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_email_cadastrar_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/et_nome_cadastrar_usuario"
        app:layout_constraintStart_toStartOf="@+id/et_nome_cadastrar_usuario"
        app:layout_constraintTop_toBottomOf="@+id/et_nome_cadastrar_usuario" />

    <EditText
        android:id="@+id/et_senha_cadastrar_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/senha"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_email_cadastrar_usuario"
        app:layout_constraintStart_toStartOf="@+id/et_email_cadastrar_usuario"
        app:layout_constraintTop_toBottomOf="@+id/et_email_cadastrar_usuario" />

    <CheckBox
        android:id="@+id/checkBox_permitir_cadastro_cadastrar_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/permitir_cadastro"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_senha_cadastrar_usuario"
        app:layout_constraintStart_toStartOf="@+id/et_senha_cadastrar_usuario"
        app:layout_constraintTop_toBottomOf="@+id/et_senha_cadastrar_usuario" />

    <Button
        android:id="@+id/bt_gravar_cadastrar_pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/botao_redondo_gradiente_roxo"
        android:text="@string/cadastrar"
        android:textColor="@color/corBranca"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_permitir_cadastro_cadastrar_usuario"
        app:layout_constraintStart_toStartOf="@+id/checkBox_permitir_cadastro_cadastrar_usuario"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_permitir_cadastro_cadastrar_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>