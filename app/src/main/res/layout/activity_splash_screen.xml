<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_cor_gradiente">

    <TextView
        android:id="@+id/titulo_principal_splash_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/glacial_indifference"
        android:text="@string/titulo_principal_splash_screen"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="108sp"
        android:textStyle="italic|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.424" />

    <TextView
        android:id="@+id/titulo_secundario_splash_screen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/glacial_indifference"
        android:text="@string/titulo_secundario_splash_screen"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="@+id/titulo_principal_splash_screen"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/titulo_principal_splash_screen"
        app:layout_constraintTop_toTopOf="@+id/titulo_principal_splash_screen" />

</androidx.constraintlayout.widget.ConstraintLayout>