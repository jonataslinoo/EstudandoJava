<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/corRoxoClaro</item>
        <item name="colorPrimaryDark">@color/corRoxoEscuro</item>
        <item name="colorAccent">@color/corRoxoClaro</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="itemBackground">@color/corBranca</item>
    </style>

    <!-- estilo de tema para tela cheia -->
    <style name="AppCompat.TelaCheia" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!-- estilo para deixar o edit text em branco -->
    <style name="EstiloCorBranca">
        <item name="colorControlNormal">@color/corBranca</item>
        <item name="colorControlActivated">@color/corBranca</item>
        <item name="android:theme">@style/EstiloCorBranca</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">@color/corBranca</item>
        <item name="android:textColor">@color/corBranca</item>
    </style>

    <!-- estilo para deixar o edit text em branco -->
    <style name="EstiloGradiente">
        <item name="colorControlNormal">@color/corBranca</item>
        <item name="colorControlActivated">@color/corBranca</item>
        <item name="android:theme">@style/EstiloCorBranca</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">@color/corBranca</item>
        <item name="android:textColor">@color/corBranca</item>
    </style>

    <style name="TelaDialogo" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/model_arredondada</item>
    </style>

</resources>
